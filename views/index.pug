extends layout

block content

  h1 SQL Library Manager
  p
    a.button(href="/books/new") Create New Book   
  p
    form(action="") 
      input(type="search" name="search" placeholder="Title, author, ...")
      input(type="submit" value="Search")
  table
    thead
      tr
        th Title
        th Author
        th Genre 
        th Year 
    tbody
      
      each book in books
        tr
          td
            a(href="/books/" + book.id)=book.title
          td=book.author
          td=book.genre
          td=book.year
